<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_pack.student_pack">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_stud_pack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/pri"
        app:tabIndicatorColor="@color/pri"
        app:tabTextColor="@color/white"
        android:background="@color/blue"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/stud_pack_view_pager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_layout_stud_pack"
        android:layout_alignParentBottom="true" />

</RelativeLayout>